  "scripts": {
    "dev": "./scripts/check-and-run.sh 6002 \"next dev -p 6002\"",
    "build": "next build",
    "start": "./scripts/check-and-run.sh 6002 \"next start -p 6002\"",
    "lint": "next lint",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
