{
  "name": "tmp-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --config vite.config.chrome.ts",
    "dev:chrome": "vite --config vite.config.chrome.ts",
    "dev:tauri": "vite --config vite.config.tauri.ts",
    "dev:macos": "vite --config vite.config.macos.ts",
    "build": "npm run build:chrome",
    "build:chrome": "tsc -b && vite build --config vite.config.chrome.ts && npm run build:extension",
    "build:tauri": "tsc -b && vite build --config vite.config.tauri.ts",
    "build:macos": "vite build --config vite.config.macos.ts",
    "build:extension": "cp public/manifest.json dist/ && cp public/icon*.png dist/ && cp public/icon*.svg dist/ && cp public/frequency-dictionary.txt dist/",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-store": "^2.4.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.473.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@jridgewell/gen-mapping": "^0.3.5",
    "@jridgewell/sourcemap-codec": "1.4.15",
    "@jridgewell/trace-mapping": "^0.3.17",
    "@tailwindcss/postcss": "^4.1.12",
    "@tauri-apps/cli": "^2.9.5",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.1.31",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^2.1.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^2.1.4"
  },
  "vitest": {
    "environment": "jsdom",
    "globals": true,
    "setupFiles": [
      "src/test/setup.ts"
    ]
  }
}
