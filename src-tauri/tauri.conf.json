{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Unscramm",
  "version": "0.0.1",
  "identifier": "com.scrappykin.unscramm",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:tauri",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Unscramm",
        "width": 400,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "skipTaskbar": true,
        "focus": true,
        "transparent": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Unscramm - Spell Check Visualizer"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "clipboard-manager": {},
    "store": {
      "default": "settings.json"
    }
  }
}
